@model IEnumerable<IdentityRole>
@{
    ViewData["Title"] = "ROLES";
}
<br />
<div class="text-center">
    <h3>
        Nível de acesso
    </h3>
</div>
<a asp-action="Create" class="btn btn-secondary">Criar Role</a>

<table class="table table-sm table-bordered table-bordered">
    <tr><th>ID</th><th>Nome</th></tr>
    @foreach (var role in Model)
    {
        <tr>
            <td>@role.Id</td>
            <td>@role.Name</td>
            <td i-role="@role.Id"></td>
            <td><a class="btn btn-sm btn-primary" asp-area="Admin" asp-action="Update" asp-route-id="@role.Id">Editar</a></td>
            <td>
                <form asp-action="Delete" asp-route-id="@role.Id" method="get">
                    <button type="submit" class="btn btn-sm btn-danger">
                        Deletar
                    </button>
                </form>
            </td>
        </tr>
    }
</table>
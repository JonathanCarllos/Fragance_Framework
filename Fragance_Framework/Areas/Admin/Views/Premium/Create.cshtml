@model Premium

@{
    ViewData["Title"] = "Create";
}
<br />
<div class="card">
    <div class="card-header">
        <div class="text-center">
            <h1>
                Cadastrar novo Produto
            </h1>
        </div>
    </div>
    <div class="card-body">
        <div class="row">
            <div class="col-md-12">
                <form asp-action="Create">
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                    <div class="row">
                        <div class="col-3">
                            <label asp-for="CodSistema" class="control-label"></label>
                            <input asp-for="CodSistema" class="form-control" />
                            <span asp-validation-for="CodSistema" class="text-danger"></span>
                        </div>
                        <div class="col-3">
                            <label asp-for="Linha" class="control-label"></label>
                            <input asp-for="Linha" class="form-control" />
                            <span asp-validation-for="Linha" class="text-danger"></span>
                        </div>
                        <div class="col-3">
                            <label asp-for="DescProduto" class="control-label"></label>
                            <input asp-for="DescProduto" class="form-control" />
                            <span asp-validation-for="DescProduto" class="text-danger"></span>
                        </div>
                        <div class="col-3">
                            <label asp-for="DescProdutoFiscal" class="control-label"></label>
                            <input asp-for="DescProdutoFiscal" class="form-control" />
                            <span asp-validation-for="DescProdutoFiscal" class="text-danger"></span>
                        </div>
                    </div>
                    <br />
                    <div class="text-center">
                        <h5>Esmalte Avulso</h5>
                    </div>
                    <div class="row">
                        <div class="col-4">
                            <label asp-for="UnidadeSolto" class="control-label"></label>
                            <input asp-for="UnidadeSolto" class="form-control" />
                            <span asp-validation-for="UnidadeSolto" class="text-danger"></span>
                        </div>
                        <div class="col-4">
                            <label asp-for="Cartucho" class="control-label"></label>
                            <input asp-for="Cartucho" class="form-control" />
                            <span asp-validation-for="Cartucho" class="text-danger"></span>
                        </div>
                        <div class="col-4">
                            <label asp-for="CaixaEmbalagem" class="control-label"></label>
                            <input asp-for="CaixaEmbalagem" class="form-control" />
                            <span asp-validation-for="CaixaEmbalagem" class="text-danger"></span>
                        </div>
                    </div>
                    <br />
                    <div class="row">
                        <div class="col-3">
                            <label asp-for="NumProcesso" class="control-label"></label>
                            <input asp-for="NumProcesso" class="form-control" />
                            <span asp-validation-for="NumProcesso" class="text-danger"></span>
                        </div>
                        <div class="col-3">
                            <label asp-for="NCM" class="control-label"></label>
                            <input asp-for="NCM" class="form-control" />
                            <span asp-validation-for="NCM" class="text-danger"></span>
                        </div>
                        <div class="col-3">
                            <label asp-for="QtdCaixa" class="control-label"></label>
                            <input asp-for="QtdCaixa" class="form-control" />
                            <span asp-validation-for="QtdCaixa" class="text-danger"></span>
                        </div>
                        <div class="col-3">
                            <label asp-for="QtdCartucho" class="control-label"></label>
                            <input asp-for="QtdCartucho" class="form-control" />
                            <span asp-validation-for="QtdCartucho" class="text-danger"></span>
                        </div>
                    </div>
                    <br />
                    <div class="text-center">
                        <h5>Medidas <strong>Caixa Embarque</strong> e peso <strong>Esmalte Avulso</strong></h5>
                    </div>
                    <div class="row">
                        <div class="col-3">
                            <label asp-for="Altura" class="control-label"></label>
                            <input asp-for="Altura" class="form-control" />
                            <span asp-validation-for="Altura" class="text-danger"></span>
                        </div>
                        <div class="col-3">
                            <label asp-for="Largura" class="control-label"></label>
                            <input asp-for="Largura" class="form-control" />
                            <span asp-validation-for="Largura" class="text-danger"></span>
                        </div>
                        <div class="col-3">
                            <label asp-for="Profundidade" class="control-label"></label>
                            <input asp-for="Profundidade" class="form-control" />
                            <span asp-validation-for="Profundidade" class="text-danger"></span>
                        </div>
                        <div class="col-3">
                            <label asp-for="Peso" class="control-label"></label>
                            <input asp-for="Peso" class="form-control" />
                            <span asp-validation-for="Peso" class="text-danger"></span>
                        </div>
                    </div>
                    <br />
                    <div class="form-group" align="right">
                        <input type="submit" value="Salvar" class="btn btn-primary" /> <a asp-action="Index" class="btn btn-primary"><i class="fa-solid fa-circle-left"></i> Volta para a lista</a>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>